<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp"></padding>
            <stroke android:width="2dp" android:color="@android:color/holo_blue_dark"></stroke>
        </shape>
    </item>
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <padding android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp"></padding>
            <stroke android:width="2dp" android:color="@android:color/darker_gray"></stroke>
        </shape>
    </item>
</selector>