<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xplay.pp.scaletimebar.MainActivity">

    <TextView
        android:id="@+id/main_tv_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="55555555555"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/main_scaletimebar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.xplay.pp.scaletimebar.timebar.ScaleTimeBar
        android:id="@+id/main_scaletimebar"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.xplay.pp.scaletimebar.timebar.TimeBarView
        android:id="@+id/main_timebar"
        android:layout_width="500dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_scaletimebar">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.xplay.pp.scaletimebar.timebar.TimeBarView>

</android.support.constraint.ConstraintLayout>
